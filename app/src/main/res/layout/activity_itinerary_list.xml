<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Title for the itinerary page -->
    <TextView
        android:id="@+id/itineraryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Itinerary"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <!-- Day selector spinner -->
    <Spinner
        android:id="@+id/daySelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- MapView to display the route with markers and polylines -->
    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button to allow user to save or share the itinerary if needed -->
    <Button
        android:id="@+id/saveItineraryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Itinerary"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"
        android:visibility="gone" />

</LinearLayout>